<Window x:Class="OrderAssistantUI.ProgressView"
        Title="{Binding Path=WindowTitle, Mode=TwoWay}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" Width="450" Height="200">

    <Grid Width="450" Height="200">
        <ProgressBar Name="ProgressBar1" Maximum="{Binding Path=ProgressBar1Maximum, Mode=TwoWay}"  HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" Width="400" Height="20" HorizontalContentAlignment="Center" RenderTransformOrigin="0.503,0.454"/>
        <ProgressBar Name="ProgressBar2" Maximum="{Binding Path=ProgressBar2Maximum, Mode=TwoWay}" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="400" Height="20" HorizontalContentAlignment="Center" RenderTransformOrigin="0.503,0.454" VerticalContentAlignment="Center"/>
        <Button Name="ButtonCancel" Content="Cancel" HorizontalAlignment="Center" Margin="0,122,0,0" Width="122" Height="30" VerticalAlignment="Top"/>
        <Label Name="LabelProgress1" Content="Label1" HorizontalAlignment="Left" Height="25" Margin="26,4,0,0" VerticalAlignment="Top" Width="399"/>
        <Label Name="LabelProgress2" Content="Label2" HorizontalAlignment="Left" Height="25" Margin="26,54,0,0" VerticalAlignment="Top" Width="399"/>
    </Grid>
</Window>